<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/cjiaclean_inventory</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <mapping class="com.huazhu.hvip.inventory.model.GoodsMateriel"/>
        <mapping class="com.huazhu.hvip.inventory.model.Inventory"/>
        <mapping class="com.huazhu.hvip.inventory.model.InventoryRecord"/>
        <mapping class="com.huazhu.hvip.inventory.model.Materiel"/>
        <mapping class="com.huazhu.hvip.inventory.model.MeasureUnit"/>
        <mapping class="com.huazhu.hvip.inventory.model.MeasureUnitGroup"/>
        <mapping class="com.huazhu.hvip.inventory.model.Warehouse"/>

        <!-- No Table  -->
    </session-factory>
</hibernate-configuration>